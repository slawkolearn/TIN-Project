extends layout

block content
  if error 
    p.error= error
  form(action="/authenticateUser", method="post")
    label.formLabel(for="username") Proszę podaj swój nick i hasło:
    br
    input.formInput(type="text", name="username" id="username")
    br
    input.formInput(type="password", name="password" id="password")
    br
    button.formButton(type="submit") Zaloguj
  br
  br
  form(action="/register" method="get")
    button.formButton(type="submit") Zarejestruj się!