extends layout

block content
  form#registerForm(action="/register", method="post")
    label.formLabel(for="username") Podaj swój nick
    br
    input.formInput(type="text", name="username")
    br
    label.formLabel(for="email") Podaj swój email
    br
    input.formInput(type="email", name="email")

    br 
    label.formLabel(for="password") Podaj swoje hasło:
    br
    input.formInput(type="password", name="password")

    br
    button.formButton(type="submit") Zarejestruj!
    button.formButton(type="reset") Wyczyść formularz!

  form(action="/", method="get")
    button.formButton(type="submit") Anuluj

  

