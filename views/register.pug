extends layout

block content
  form(action="/register", method="post")
    label(for="username") Podaj swój nick
    br
    input(type="text", name="username")
    br
    label(for="email") Podaj swój email
    br
    input(type="email", name="email")

    br 
    label(for="password") Podaj swoje hasło:
    br
    input(type="password", name="password")

    br
    button(type="submit") Zarejestruj!
    button(type="reset") Wyczyść formularz!

